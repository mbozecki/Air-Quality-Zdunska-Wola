<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/info"
        style="@style/Widget.AppCompat.Button"
        android:layout_height="365dp"
        android:layout_width="match_parent"
        android:background="@color/yellow_start"
        android:fitsSystemWindows="true"
        android:clickable="false"

        android:orientation="vertical"
        android:paddingBottom="@dimen/_50sdp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="ul. Swierkowa"
            android:textColor="@color/white"
            android:id="@+id/place_name"
            android:textSize="24dp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/detail_CAQI"
            android:fontFamily="sans-serif-medium"
            android:text="33"
            android:textColor="@color/white"
            android:textSize="@dimen/_110sdp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginVertical="10dp"
            android:text="/100 · CAQI (PM)"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/message_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Zostan w domu"
            android:textColor="@color/white"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/linearLayout"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/purple_section"
        android:clickable="false"
        android:clipToPadding="false"
        android:minHeight="360dp"
        android:orientation="vertical"
        android:translationY="-65dp"
        android:paddingTop="15dp"
        android:paddingHorizontal="15dp"
        android:paddingBottom="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:text="Dane szczegółowe"

            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />
        <TextView
            android:id="@+id/odczyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:text="Odczyt z godziny 15"

            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:id="@+id/PM10_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"

            android:padding="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="PM10"
                android:textColor="@color/white"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/PM10_percentage"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="150%"

                android:textColor="@color/white"
                android:textSize="@dimen/_24sdp" />

            <TextView
                android:id="@+id/PM10_indicator"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:fontFamily="sans-serif-medium"
                android:minWidth="50dp"
                android:text="22µg/m³"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/PM25_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"

            android:padding="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="PM2.5"
                android:textColor="@color/white"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/PM25_percentage"
                android:layout_width="100dp"

                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="67%"
                android:textColor="@color/white"
                android:textSize="@dimen/_24sdp" />

            <TextView
                android:id="@+id/PM25_indicator"
                android:layout_width="50dp"

                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:fontFamily="sans-serif-medium"
                android:minWidth="50dp"
                android:text="22µg/m³"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/PM1_layout"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal"

            android:padding="7dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text="PM1"
                android:textColor="@color/white"
                android:textSize="22dp" />

            <TextView
                android:layout_width="100dp"

                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:textColor="@color/white"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/PM1_indicator"
                android:layout_width="50dp"

                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:minWidth="50dp"
                android:text="22µg/m³"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>